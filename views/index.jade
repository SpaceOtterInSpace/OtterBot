extends layout

block content
  .row
    .col-sm-12
      h1 Welcome, O life!
      p I go to encounter for the millionth time the reality of experience and to forge in the smithy of my soul the uncreated conscience of my race.
  
  .row
    .col-sm-4.col-sm-offset-4
      .col-xs-10.col-xs-offset-1
        button.btn.btn-block.btn-lg.btn-primary.emitter(data-channel='up', data-value='')
          span.glyphicon.glyphicon-chevron-up
          | &nbsp; up &nbsp;
          span.glyphicon.glyphicon-chevron-up
  .row
    br
    .col-sm-4.col-sm-offset-2
      .col-xs-10.col-xs-offset-1
        button.btn.btn-block.btn-lg.btn-warning.emitter(data-channel='left', data-value='')
          span.glyphicon.glyphicon-chevron-left
          | &nbsp; left
    .col-sm-4
      .col-xs-10.col-xs-offset-1
        button.btn.btn-block.btn-lg.btn-success.emitter(data-channel='right', data-value='')
          | right &nbsp;
          span.glyphicon.glyphicon-chevron-right
  .row
    br
    .col-sm-4.col-sm-offset-4
      .col-xs-10.col-xs-offset-1
        button.btn.btn-block.btn-lg.btn-danger.emitter(data-channel='down', data-value='')
          span.glyphicon.glyphicon-chevron-down
          | &nbsp; down &nbsp;
          span.glyphicon.glyphicon-chevron-down

  .row
    .col-sm-12
      hr
      .form-horizontal
        .form-group
          label.col-sm-4 feedback from server
          .col-sm-8
            textarea#feedback.form-control(disabled)
    
